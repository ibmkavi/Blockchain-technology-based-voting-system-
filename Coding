Block Class
import hashlib
import time

class Block:
    def __init__(self, index, voter_id, candidate, previous_hash):
        self.index = index
        self.timestamp = time.time()
        self.voter_id = voter_id
        self.candidate = candidate
        self.previous_hash = previous_hash
        self.hash = self.calculate_hash()

    def calculate_hash(self):
        data = f"{self.index}{self.timestamp}{self.voter_id}{self.candidate}{self.previous_hash}"
        return hashlib.sha256(data.encode()).hexdigest()

Blockchain Class
class Blockchain:
    def __init__(self):
        self.chain = []
        self.voters = set()
        self.create_genesis_block()

    def create_genesis_block(self):
        genesis_block = Block(0, "None", "Genesis", "0")
        self.chain.append(genesis_block)

    def get_latest_block(self):
        return self.chain[-1]

    def add_vote(self, voter_id, candidate):
        if voter_id in self.voters:
            print("‚ùå Vote rejected: Voter has already voted")
            return

        new_block = Block(
            index=len(self.chain),
            voter_id=voter_id,
            candidate=candidate,
            previous_hash=self.get_latest_block().hash
        )

        self.chain.append(new_block)
        self.voters.add(voter_id)
        print("‚úÖ Vote successfully added")

Voting & Result Display

def count_votes(self):
        results = {}
        for block in self.chain[1:]:
            candidate = block.candidate
            results[candidate] = results.get(candidate, 0) + 1


Run the Voting System
voting_system = Blockchain()

voting_system.add_vote("VOTER001", "Candidate A")
voting_system.add_vote("VOTER002", "Candidate B")
voting_system.add_vote("VOTER003", "Candidate A")
voting_system.add_vote("VOTER001", "Candidate C")  # Duplicate vote

print("\nüó≥Ô∏è Voting Results:")
results = voting_system.count_votes()
for candidate, votes in results.items():
    print(candidate, ":", votes)
        return results
